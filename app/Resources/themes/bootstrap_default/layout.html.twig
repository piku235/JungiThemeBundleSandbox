<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>JungiThemeBundle Sandbox</title>
    {% block stylesheets %}
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    {% endblock %}

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body>
    <div class="container">
        <div class="header">
            <nav>
                <ul class="nav nav-pills pull-right">
                    {% set route_name = app.request.get('_route') %}
                    <li role="presentation" {% if route_name == 'jungi_environment_index' %}class="active"{% endif %}><a href="{{ path('jungi_environment_index') }}">Home</a></li>
                    <li role="presentation" {% if route_name == 'jungi_environment_theme_manage' %}class="active"{% endif %}><a href="{{ path('jungi_environment_theme_manage') }}">Theme manage</a></li>
                    <li role="presentation" {% if route_name == 'jungi_environment_admin' %}class="active"{% endif %}><a href="{{ path('jungi_environment_admin') }}">Admin</a></li>
                </ul>
            </nav>
            <h3 class="text-muted">
                <span class="glyphicon glyphicon-leaf" aria-hidden="true"></span> JungiThemeBundle
            </h3>
        </div>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <p class="pull-right">&copy; JungiThemeBundle Sandbox {{ "now"|date('Y') }}</p>
        </footer>
    </div>
    {% block scripts_bottom %}
    <script src="{{ asset('components/jquery/dist/jquery.min.js') }}"></script>
    <script src="{{ asset('components/bootstrap/dist/js/bootstrap.min.js') }}"></script>
    {% endblock %}
</body>
</html>
