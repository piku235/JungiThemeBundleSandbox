{% extends '::layout.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h4>Change theme</h4>
            <p>The available themes for the environment <b>{{ environment }}</b></p>
            <div class="row">
                <div class="col-xs-6 col-lg-6">
                    {{ form_start(form, { 'attr': { 'role': 'form', 'class': 'form-inline' } }) }}
                    <div class="form-group">
                        {{ form_widget(form.theme, { 'attr': { 'class': 'form-control' } }) }}
                        {{ form_errors(form.theme) }}
                    </div>
                    {{ form_widget(form.submit, { 'attr': { 'class': 'btn btn-success' } }) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <h4>Current theme details</h4>
            <p>Here you can read some information about the current theme.</p>
            <div class="row">
                <div class="col-lg-6">
                    <h4>Basic information</h4>
                    <dl class="dl-horizontal">
                        <dt>Name</dt>
                        <dd>{{ theme.name }}</dd>
                        <dt>Friendly name</dt>
                        <dd>{{ theme.information.name }}</dd>
                        <dt>Description</dt>
                        <dd>{{ theme.information.description|raw }}</dd>
                        <dt>Version</dt>
                        <dd>{{ theme.information.version }}</dd>
                        <dt>License</dt>
                        <dd>{{ theme.information.license }}</dd>
                    </dl>
                </div>
                <div class="col-lg-6">
                    <h4>Theme tags</h4>
                    {% for tag in theme.tags %}
                        <dl class="dl-horizontal">
                            <dt>Name</dt>
                            <dd>{{ tag.name }}</dd>
                        </dl>
                    {% else %}
                        <p>There is no any tag for the theme.</p>
                    {% endfor %}
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <h4>Authors</h4>
                    {% for author in theme.information.authors %}
                        <dl class="dl-horizontal">
                            <dt>Name</dt>
                            <dd>{{ author.name }}</dd>
                            <dt>Email</dt>
                            <dd>{{ author.email }}</dd>
                            <dt>Homepage</dt>
                            <dd><a href="{{ author.homepage }}" target="_blank">{{ author.homepage }}</a></dd>
                        </dl>
                    {% else %}
                        <p>There is no any defined author for the theme.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}